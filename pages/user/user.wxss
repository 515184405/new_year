.user{
  height:100%;
  width:100%;
  background-color:#eee;
}
.userInfo_module{
  height:18%;
  background: #fff;
  flex-direction: column;
}
.avatarUrl{
  display: block;
  height:100rpx;
  width:100rpx;
  border-radius: 5px;
  overflow:hidden;
}
.nickName{
  font-size: 32rpx;
  margin-top:18rpx;
  color:#333;
}
._line{
  height:2%;
}
.user_module{
  height:80%;
  background: #fff;
}
.navBar{
  height:8%;
  padding-top:10rpx;
  box-sizing: border-box;
}
.navBar-box{
  width:100%;
  border:1px solid #aaa;
  border-radius: 3px;
}
.navBar-box .active{
  background-color:#619bfe;
  color:#fff;
}
.navBar-item{
  width:50%;
  text-align: center;
  padding:10rpx 0;
  font-size:32rpx;
}
.navBar-item:last-child{
  border-left:1px solid #aaa;
}
.pay-module{
  width:90%;
  margin:0 auto;
  height:92%;
  background: #fff;
  box-sizing: border-box;
}
.item-img{
    width:210rpx;
    height:210rpx;
}
.item-box{
  padding:0 50rpx;
  height:230rpx;
  background-color:#fff;
  width:100%;
  box-sizing: border-box;
  justify-content: space-between;
  border-bottom:20rpx solid #eee;
}
.module-item{
  justify-content: space-between;
  padding:10rpx 0;
  border-bottom:1px solid #eee;
}
.item-img{
  height:80rpx;
  width:80rpx;
  padding-top:10rpx;
  border-radius: 10rpx;
}
.item-ls{
  width:280rpx;
  font-size: 32rpx;
}
.item-bs{
  font-size:24rpx;
  color:#888;
}
.t-r{
  text-align: right;
}