.user{
  height:100%;
  width:100%;
  background-color:#eee;
}
.userInfo_module{
  height:25%;
  flex-direction: column;
}
.avatarUrl{
  display: block;
  height:120rpx;
  width:120rpx;
  border-radius: 50%;
  overflow:hidden;
}
.nickName{
  font-size: 32rpx;
  margin-top:18rpx;
  color:#777;
}
.pay-module{
  width:100%;
  height:75%;
  box-sizing: border-box;
}
.item-img{
    width:210rpx;
    height:210rpx;
}
.item-box{
  padding:0 50rpx;
  height:230rpx;
  background-color:#fff;
  width:100%;
  box-sizing: border-box;
  justify-content: space-between;
  border-bottom:20rpx solid #eee;
}
.btn-status{
  margin:0;
  color:#575757;
  font-size: 32rpx;
}